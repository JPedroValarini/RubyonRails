<p id="notice"><%= notice %></p>

<h1>Teste</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Titulos</th>
      <th>Observações</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @poems.each do |poem| %>
      <tr>
        <td><%= poem.tittle %></td>
        <td><%= poem.body %></td>
        <td><%= link_to 'Mostrar', poem %></td>
        <td><%= link_to 'Editar', edit_poem_path(poem) %></td>
        <td><%= link_to 'Apagar', poem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add', new_poem_path, class:"btn btn-success" %>
